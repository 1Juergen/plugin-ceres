{% set lang = services.sessionStorage.getLang() %}

<header class="top-bar">
    <div class="container">
        <div class="row">
            <div class="col-md-4 hidden-sm-down">
                <div  class="shariff socialbar"
                        data-services='["facebook","googleplus","pinterest","twitter"]'
                        data-url=""
                        data-media-url=""
                        data-theme="minimal">
                </div>
            </div>
            <div class="col-md-8">
                <ul class="list-inline pull-xs-right ">

                    <li class="list-inline-item">
                        <user-login-handler></user-login-handler>
                    </li>

                    <li class="list-inline-item dropdown">
                        <language-select current-lang="{{ lang }}"></language-select>
                    </li>
                    <li class="list-inline-item dropdown searchBox">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"> <i class="fa fa-search"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-right">
                            <li>
                                <span class="input-group">
                                    <input type="text" class="form-control" placeholder="Suchen.." aria-describedby="basic-addon2">
                                    <span class="input-group-addon" id="basic-addon2">Suchen</span>
                                </span>
                            </li>
                        </ul>
                    </li>
                    <li class="list-inline-item">
                        <basket-button basket-data="{{ services.basket.getBasket() | json_encode() }}"></basket-button>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</header>

<div class="container">
    {% include "PluginCallisto::PageDesign.Navigation" %}

    <!-- breadcrumb -->
    {% if not services.category.isHome() %}
        {% include "PluginCallisto::PageDesign.Breadcrumb" with {'categoryTree': services.category.getCategoryTreeAsList()} %}
    {% endif %}
</div>
