{% import "PluginCeres::PageDesign.Macros.LayoutContainer" as LayoutContainer %}

{% set companyLogo  = config("PluginCeres.header.company_logo") %}

{{ component( "PluginCeres::Customer.Components.UserLoginHandler" ) }}
{{ component( "PluginCeres::PageDesign.Components.ShippingCountrySelect" ) }}
{{ component( "PluginCeres::PageDesign.Components.ShopLanguageSelect" ) }}
{{ component( "PluginCeres::ItemList.Components.ItemSearch" ) }}

{% set lang = services.sessionStorage.getLang() %}

<header class="top-bar">
    <div class="container-max">
        <div class="row">
            {{ LayoutContainer.show("PluginCeres::Header.LeftSide") }}

            <ul id="controlsList" class="controls-list list-inline">

                <li class="list-inline-item control-user">
                    <user-login-handler
                            :user-data="{{ services.customer.getContact() | json_encode() }}"></user-login-handler>
                </li>

                <li class="list-inline-item dropdown control-languages">
                    <a class="" data-toggle="collapse" href="#countrySettings" aria-expanded="false"
                       aria-controls="countrySettings"
                       data-parent="#controlsList">
                        <i class="flag-icon flag-icon-{{ lang }}"></i>
                    </a>
                </li>

                <li class="list-inline-item control-search">
                    <a class="" data-toggle="collapse" href="#searchBox"
                       aria-expanded="{% if services.template.isSearch() %}true{% else %}false{% endif %}"
                       aria-controls="searchBox"
                       data-parent="#controlsList">
                        <i class="fa fa-search"></i>
                        <span class="hidden-xs-down">{{ trans("PluginCeres::Template.generalSearchNoDot") }}</span>
                    </a>
                </li>

                <li class="list-inline-item control-basket">
                    <a href="#" id="toggleBasketPreview" class="toggle-basket-preview">
                        <i class="fa fa-shopping-cart" aria-hidden="true"></i>
                        <span class="badge" v-resource-bind:basket="itemSum" :filters="['currency']"></span>
                    </a>
                </li>
            </ul>
        </div>
    </div>
</header>

<div class="top-bar-slider" style="display: none;">
    <div class="container-max">
        <div class="row">

            <nav class="navbar navbar-transparent">
                <div class="brand-wrapper">
                    <a class="navbar-brand pull-lg-left" href="/">
                        <img src="{{ companyLogo }}" class="img-fluid nav-brand-small"/>
                        {#<img src="/layout/plugins/production/pluginceres/images/ceres-logo.png" class="img-fluid nav-brand-small"/>#}
                    </a>

                    <button class="navbar-toggler navbar-toggler-white hidden-lg-up" type="button" data-toggle="collapse"
                            data-target="#secondnavbarcollapse">
                        &#9776;
                    </button>
                </div>

                <div class="collapse navbar-toggleable-md" id="secondnavbarcollapse">
                    <ul class="nav navbar-nav pull-lg-right">
                        {% for category in services.category.getNavigationTree("item", lang) %}
                            {% if category.children is empty %}
                                <li class="nav-item">
                                    <a class="nav-link nav-link-small"
                                       href="{{ services.category.getURL( category, lang ) }}">{{ category.details.first.name }}</a>
                                </li>
                            {% else %}
                                <li class="nav-item dropdown">
                                    <a class="dropdown-toggle nav-link nav-link-small" id="{{ category.details.first.name }}_Menu"
                                       data-target="#"
                                       href="{{ services.category.getURL( category, lang ) }}"
                                       data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"
                                       style="color: #dcdbd8">{{ category.details.first.name }}
                                    </a>
                                    <div class="dropdown-menu dropdown-menu-right"
                                         aria-labelledby="{{ category.details.first.name }}_Menu">
                                        {% for subcat in category.children %}
                                            <a class="dropdown-item special-case"
                                               href="{{ services.category.getURL( subcat, lang ) }}">
                                                {{ subcat.details.first.name }}
                                            </a>
                                        {% endfor %}
                                    </div>
                                </li>
                            {% endif %}
                        {% endfor %}
                    </ul>
                </div>
            </nav>
        </div>
    </div>
</div>

<div class="container-max">
    <div class="row">
        <div id="searchBox" class="cmp cmp-search-box collapse {% if services.template.isSearch() %} in {% endif %}">
            <item-search></item-search>
        </div>

        <div id="countrySettings" class="cmp cmp-country-settings collapse">
            <div class="country-settings-inner row">

                <div class="language-settings col-xs-12 col-sm-6">
                    <div class="list-title">
                        <strong>{{ trans("PluginCeres::Template.generalSelectLanguage") }}</strong>
                        <hr>
                    </div>
                    <shop-language-select country-flag-prefix="flag-icon-"/>
                </div>

                <div class="shipping-settings col-xs-12 col-sm-6">
                    <div class="list-title">
                        <strong>{{ trans("PluginCeres::Template.generalSelectShippingCountry") }}</strong>
                        <hr>
                    </div>
                    <shipping-country-select country-flag-prefix="flag-icon-"/>
                </div>
            </div>
        </div>

        {% include "PluginCeres::PageDesign.Partials.Header.Navigation" %}

        <!-- breadcrumb -->
        {% if not services.template.isHome() and not services.template.isMyAccount() and not services.template.isCheckout() %}
            {% include "PluginCeres::PageDesign.Partials.Header.Breadcrumb" %}
        {% endif %}

    </div>
</div>
