{{ component( "PluginCallisto::Customer.Components.UserLoginHandler" ) }}
{{ component( "PluginCallisto::PageDesign.Components.LanguageSelect" ) }}

{% set lang = services.sessionStorage.getLang() %}

<header class="top-bar">
    <div class="container">
        <div class="row">
            <div class="col-md-4 hidden-sm-down">
                <div  class="shariff socialbar"
                        data-services='["facebook","googleplus","pinterest","twitter"]'
                        data-url=""
                        data-media-url=""
                        data-theme="minimal">
                </div>
            </div>
            <div class="col-md-8">
                <ul class="list-inline pull-xs-right ">

                    <li class="list-inline-item">
                        <user-login-handler></user-login-handler>
                    </li>

                    <li class="list-inline-item dropdown">
                        <language-select current-lang="{{ lang }}"></language-select>
                    </li>
                    <li class="list-inline-item dropdown searchBox">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"> <i class="fa fa-search"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-right">
                            <li>
                                <span class="input-group">
                                    <input type="text" class="form-control" placeholder="{{ trans("PluginCallisto::Callisto.generalSearch") }}" aria-describedby="basic-addon2">
                                    <span class="input-group-addon" id="basic-addon2">{{ trans("PluginCallisto::Callisto.generalSearchNoDot") }}</span>
                                </span>
                            </li>
                        </ul>
                    </li>
                    <li class="list-inline-item">
                        <a href="#" id="toggleBasketPreview" class="toggle-basket-preview">
                            <i class="fa fa-shopping-cart" aria-hidden="true"></i>
                            <span class="badge" v-resource-bind:basket="itemSum" :filters="['currency']"></span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</header>

<div class="container header">
    {% include "PluginCallisto::PageDesign.Partials.Header.Navigation" %}

    <!-- breadcrumb -->
    {% if not services.category.isHome() %}
        {% include "PluginCallisto::PageDesign.Partials.Header.Breadcrumb" with {'categoryTree': services.category.getCategoryTreeAsList()} %}
    {% endif %}
</div>
