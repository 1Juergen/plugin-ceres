{% set urls = ['https://cdn02.plentymarkets.com/pmsbpnokwu6a/plugin/production/marketingresource/images/homepage/slider1.jpg', 'https://cdn02.plentymarkets.com/pmsbpnokwu6a/plugin/production/marketingresource/images/homepage/slider2.jpg', 'https://cdn02.plentymarkets.com/pmsbpnokwu6a/plugin/production/marketingresource/images/homepage/slider3.jpg'] %}

<div id="marketing-homepage-slider" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        {% for i in urls %}
            <li data-target="#marketing-homepage-slider" data-slide-to="{{ loop.index - 1 }}"{% if loop.index == 1 %} class="active"{% endif %}></li>    
        {% endfor %}
        
    </ol>
    <div class="carousel-inner" role="listbox">
        {% for i in urls %}
            <div class="carousel-item{% if loop.index == 1 %} active{% endif %}">
                <img class="" style="width: 100%" src="{{ i }}" alt="First slide">
            </div>
        {% endfor %}
    </div>
</div>

<div class="suggest-title">
    <h2>plentymarkets empfiehlt</h2>
</div>

<div class="container-max">
    <div class="row">

        {% for i in 0..1 %}

            <div class="{% if loop.index is divisible by(2) %} reverse{% endif %}">

                {% for i in 0..4 %}
                    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-{% if loop.index == 1 %}6{% else %}3{% endif %}">
                        <a href="#">
                            <div class="tile{% if loop.index == 1 %} tile-big{% endif %}">

                                <p class="tile-description">
                                    Lorem ipsum dolor sit amet consetetur sadipscing elitra
                                </p>

                                <div class="tile-meta">
                                    <p class="tile-title">PayPal</p>
                                </div>

                            </div>
                        </a>
                    </div>
                {% endfor %}

                
                <div class="col-xs-12">
                    <div style="margin-bottom: 60px;"></div>
                </div>

            </div>

        {% endfor %}


    </div>
</div>