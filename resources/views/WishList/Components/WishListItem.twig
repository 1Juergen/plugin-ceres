{% set configItemName = config("Ceres.item.name") %}

{{ component( "Ceres::Item.Components.QuantityInput" ) }}

<article transition="wish-list-item-transition" v-for="wishListItem in wishListItems" class="wish-list-item" id="article_${ $index }">

    <div class="row">
        <div class="col-xs-3 col-sm-2 wish-list-image-container">
            <img :src="wishListItem.data.images.all[0].urlMiddle" alt="" class="wish-list-image">
        </div>

        <div class="col-xs-5 col-sm-7 wish-list-texts">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-xs-12 col-lg-6">
                        <h2 class="h5">${ wishListItem.data.texts |Â itemName {{configItemName}} }</h2>
                    </div>
                    <div :class="'col-xs-12 col-lg-6 wish-list-availability availability_' + wishListItem.data.variation.availability.id">
                        ${ wishListItem.data.variation.availability.names.name }
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xs-4 col-sm-3 col-lg-2 offset-lg-1 wish-list-price-container">
            <div class="wish-list-price">${ wishListItem.data.calculatedPrices.default.basePrice | currency wishListItem.data.calculatedPrices.default.currency }</div>
            <div class="text-muted wish-list-remove" @click="removeFromList(wishListItem, $index)"><i class="fa fa-trash" aria-hidden="true"></i></div>
        </div>
    </div>

</article>

<p class="h4 text-muted wish-list-no-items-label" v-if="!wishListIds[0]">Noch keine Artikel in Wunschliste.</p>