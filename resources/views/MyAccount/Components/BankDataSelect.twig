<script type="x/template" id="vue-bank-data-select">
<div class="cmp cmp-address-list m-b-3">
    <div class="dropdown items">
        <div id="bankData" class="dropdown-toggle card" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <span class="item-inner">
                <span class="item-content" v-show="userBankData.length > 0">
                    <strong>Kontoinh.: ${ selectedBankData.accountOwner }</strong>
                    <span>IBAN:        ${ selectedBankData.iban }</span>
                    <span>BIC:         ${ selectedBankData.bic }</span>
                </span>
                <span class="item-content" v-show="!userBankData.length > 0">
                    <p class="text-muted small font-italic p-t-1">Sie haben noch keine Bankdaten hinterlegt</p>
                </span>
            </span>
        </div>
        <div class="dropdown-menu" aria-labelledby="bankData" v-show="userBankData.length > 0">
            <ul>
                <li class="item" v-for="(index,bankData) in userBankData">
                    <input type="radio" id="${ bankData.id }" name="bankData" :checked="index == 0" :value="bankData" @change="changeSelecting(bankData)">
                    <label for="${ bankData.id }" class="item-inner">
                        <span class="item-content small">
                            <strong>Kontoinh.: ${ bankData.accountOwner }</strong>
                            <span>Bank:        ${ bankData.bankName }</span>
                            <span>IBAN:        ${ bankData.iban }</span>
                            <span>BIC:         ${ bankData.bic }</span>
                        </span><!--
                        --><span class="item-edit" @click="openUpdateBank(index, bankData)">
                            <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                        </span>
                        <span class="item-remove" @click="removeBankData(index, bankData)">
                            <i class="fa fa-times" aria-hidden="true"></i>
                        </span>
                    </label>
                </li>
            </ul>
        </div>
    </div><!--
    --><div class="add-item">
      <a href="#" class="" data-toggle="tooltip" data-placement="right" title="Neue Bankverbindung hinzufügen" @click="openAddBank">
          <i class="fa fa-plus-square-o fa-2x" aria-hidden="true"></i>
      </a>
    </div>
</div>
<div id="bankInfoModal${_uid}">
    <div class="modal fade" tabindex="-1" role="dialog" data-keybord="false" data-backdrop="static">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" @click="reset" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title">Bankdaten ${headline}</h4>
                </div>
                <div class="modal-body">
                    <fieldset>
                      <form id="my-bankForm">
                          <div class="row">
                            <div class="col-xs-12">
                                <div class="input-unit accountOwner">
                                    <input type="text" data-validate="text" name="kontoinhaber" v-model="updateBankData.accountOwner" :value="updateBankData.accountOwner">
                                    <label for="txt_firma${_uid}">Kontoinhaber*</label>
                                </div>
                            </div>
                            <div class="col-xs-12">
                                <div class="input-unit">
                                    <input type="text" name="kreditInstitut" v-model="updateBankData.bankName" :value="updateBankData.bankName">
                                    <label for="txt_firma${_uid}">KreditInstitut</label>
                                </div>
                            </div>
                            <div class="col-xs-12">
                                <div class="input-unit iban">
                                    <input type="text" data-validate="regex" data-validate-ref="[a-zA-Z]{2,2}[0-9]{19,30}$" name="iban" maxlength="22" v-model="updateBankData.iban" :value="updateBankData.iban">
                                    <label for="txt_firma${_uid}">IBAN*</label>
                                </div>
                            </div>
                            <div class="col-xs-12">
                                <div class="input-unit">
                                    <input type="text" name="bic" v-model="updateBankData.bic" :value="updateBankData.bic">
                                    <label for="txt_firma${_uid}">BIC - BEI AUSLANDSÜBERWEISUNGEN ANGEBEN!</label>
                                </div>
                            </div>
                          </div>
                      </form>
                    </fieldset>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal" @click="reset">Abbrechen</button>
                    <button type="button" class="btn btn-primary" @click="validateInput">Speichern</button>
                </div>
            </div>
        </div>
    </div>
</div>
</script>
