<script type="x/template" id="vue-order-return-history">
	<div class="form-group">
		<div class="row m-b-1">
            <div class="col-xs-12 col-md-12 col-lg-12">
				<!-- RETURN PAGINATION -->
                <div class="clearfix history-pagination" v-if="returnsList.totalsCount > itemsPerPage">
                    <div class="pull-xs-left counter">
                        {{ trans("Ceres::Template.orderShow", {"countStart": "${ countStart }", "countEnd": "${ countEnd }", "orderMaxCount": "${ returnsList.totalsCount }" }) }}
                    </div>

                    <nav class="cmp cmp-paginator row pull-xs-right text-xs-center">
                        <ul class="pagination col-xs-12 m-y-0">

                            <!-- PREV LINK -->
                            <li class="page-item" :class="{disabled: page == 1}">
                                <button class="page-link" @click="showPage(page-1)">&laquo;</button>
                            </li>
                            <!-- ./PREV LINK -->

                            <!-- FIRST PAGE LINK -->
                            <li class="page-item" v-if="page > 2 && showFirstPage == true">
                                <button class="page-link" @click="showPage(1)">1</button>
                            </li>
                            <li class="page-item page-link" v-if="page > 2 && showFirstPage == true">...</li>
                            <!-- ./FIRST PAGE LINK -->

                            <!-- PAGINATION -->
                            <li class="page-item" v-if="returnsList.isLastPage && page > 2">
                                <button class="page-link" @click="showPage(page-2)">${ page - 2 }</button>
                            </li>

                            <li class="page-item" v-if="page > 1">
                                <button class="page-link" @click="showPage(page-1)">${ page - 1 }</button>
                            </li>

                            <li class="page-item active">
                                <span class="page-link">${ page }</span>
                            </li>

                            <li class="page-item" v-if="!returnsList.isLastPage">
                                <button class="page-link" @click="showPage(page+1)">${ page + 1 }</button>
                            </li>

                            <li class="page-item" v-if="page == 1 && page+2 <= pageMax">
                                <button class="page-link" @click="showPage(page+2)">${ page + 2 }</button>
                            </li>
                            <!-- ./PAGINATION -->

                            <!-- LAST PAGE LINK -->
                            <li class="page-item page-link" v-if="pageMax > 3 && page < pageMax-1 && showLastPage">...</li>
                            <li class="page-item" v-if="pageMax > 3 && page < pageMax-1 && showLastPage">
                                <button class="page-link" @click="showPage(pageMax)">${ pageMax }</button>
                            </li>
                            <!-- ./LAST PAGE LINK -->

                            <!-- NEXT LINK -->
                            <li class="page-item" :class="{disabled: returnsList.isLastPage}">
                                <button class="page-link" @click="showPage(page+1)">&raquo;</button>
                            </li>
                            <!-- ./NEXT LINK -->
                        </ul>
                    </nav>
                </div>
                <!-- ./RETURN PAGINATION -->

				<hr>

				<div class="order-list">
					<article class="cmp cmp-order-item" v-for="entry in returnsList.entries">

						<div class="item-details small">

							<div class="item-name">
								<h5 class="h4">{{ trans("Ceres::Template.orderStatus") }}: ${ entry.order.statusName }</h5>
							</div>

							<div class="row">
								<div class="col-xs-12 col-md-12">
									<div class="row">
										<div class="col-md-2">
											<strong>{{ trans("Ceres::Template.myAccountReturnId") }}: </strong>
											<span>${ entry.order.id }</span>
										</div>
										<div class="col-md-3">
											<strong>{{ trans("Ceres::Template.orderDate") }}: </strong>
											<span>${ entry.order.createdAt | moment "{{ trans("Ceres::Template.dateTimeFormatMoment") }}" }</span>
										</div>
										<div class="col-md-3">
											<strong>{{ trans("Ceres::Template.orderPaymentMethod") }}: </strong>
											<span>${ entry.paymentMethodName }</span>
										</div>
									</div>
								</div>
							</div>

							<div class="row">
								<div class="col-md-6 m-t-1" v-for="item in entry.order.orderItems" style="display:flex">
									<div class="col-md-3" style="display:flex">
										<div class="order-return-history-image-container" style="height: 80px">
											<a :href="entry.itemURLs[item.itemVariationId]">
												<img class="order-return-history-image" :src="entry.itemImages[item.itemVariationId]">
											</a>
										</div>
									</div>

									<div class="col-md-8" style="display:flex;">
										<div class="order-return-history-text-container" style="align-self: center">
											<a :href="entry.itemURLs[item.itemVariationId]">
												<h2 class="h5 order-return-history-name">${ item.orderItemName }</h2>
											</a>
											<h2 class="h5 order-return-history-count">Anzahl: ${item.quantity}</h2>
										</div>
									</div>
								</div>
							</div>
						</div>
					</article>
				</div>
			</div>
		</div>
	</div>
</script>