{% import "Ceres::PageDesign.Macros.LayoutContainer" as LayoutContainer %}

{% set gCapture   = services.webstoreConfig.getWebstoreConfig().googleRecaptchaApiWebsitekey %}

<script type="x/template" id="vue-login">
    <div>

        <form id="login-form-${_uid}" class="login-container m-b-1">
            <div class="row">
                <div class="col-xs-12">
                    <div class="input-unit" data-validate="mail">
                        <input type="email" name="email" id="txt_email" v-model="username">
                        <label for="txt_email">{{ trans("Ceres::Template.accEmail") }}*</label>
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="input-unit" data-validate="text">
                        <input type="password" name="password" id="txt_password" v-model="password">
                        <label for="txt_password">{{ trans("Ceres::Template.accPassword") }}*</label>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-4">
                    <div>
                        <a href="javascript:void(0)" @click="showResetPwdView" class="small">{{ trans("Ceres::Template.accForgotPassword") }}?</a>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-8 text-sm-right">
                    {{ LayoutContainer.show("Ceres::LoginOverlay.ExtendOverlayButtons") }}

                    <button @click.prevent="validateLogin" :disabled="isDisabled" class="btn btn-primary send-login-btn">
                        {{ trans("Ceres::Template.accLogin") }}
                    </button>
                </div>
            </div>
        </form>

        <form id="reset-pwd-form-${_uid}" class="reset-pwd-container m-b-1">
            <div class="row">
                <div class="col-xs-12">
                    <div class="input-unit" data-validate="mail">
                        <input type="email" name="email" id="txt_email" v-model="username">
                        <label for="txt_email">{{ trans("Ceres::Template.accEmail") }}*</label>
                    </div>
                </div>
                <div class="col-xs-12 text-sm-right">
                    {{ LayoutContainer.show("Ceres::LoginOverlay.ExtendOverlayButtons") }}

                    <button @click.prevent="cancelResetPwd" class="btn btn-secondary cancel-reset-pwd-btn">{{ trans("Ceres::Template.generalCancel") }}</button>
                    <button @click.prevent="validateResetPwd" :disabled="isDisabled" class="btn btn-primary send-reset-pwd-btn">
                        <i class="fa fa-paper-plane-o" aria-hidden="true"></i>{{ trans("Ceres::Template.generalSend") }}
                    </button>
                </div>
            </div>
        </form>

    </div>
</script>
