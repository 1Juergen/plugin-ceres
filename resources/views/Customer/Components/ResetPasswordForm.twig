{% import "Ceres::PageDesign.Macros.LayoutContainer" as LayoutContainer %}

<script type="x/template" id="vue-reset-password-form">
    <div class="row m-b-3">
        <div class="col-xs-12 col-sm-12 col-md-8 offset-md-2 col-lg-6 offset-lg-3 m-b-2">
            <div class="alert alert-info password-info">
                <i class="fa fa-info-circle" aria-hidden="true"></i>
                <span class="info-badge">{{ trans("Ceres::Template.accPasswordReq") }}</span>
            </div>
        </div>
        <form id="reset-password-form-${_uid}" class="m-b-1">
            <div class="col-xs-12 col-sm-12 col-md-6 offset-md-3">
                <div class="input-unit" data-validate="text">
                    <input type="password" name="password" id="txt_password_first" v-model="passwordFirst">
                    <label for="txt_password_first">Neues Passwort*</label>
                </div>
            </div>

            <div class="col-xs-12 col-sm-12 col-md-8 offset-md-2 col-lg-6 offset-lg-3">
                <div class="input-unit" data-validate="text">
                    <input type="password" name="password" id="txt_password_second" v-model="passwordSecond">
                    <label for="txt_password_second">Passwort wiederholen*</label>
                </div>
            </div>
        </form>

        <div class="col-xs-12 col-md-8 offset-md-2 col-lg-6 offset-lg-3 m-t-1 text-md-right">
            <button @click="saveNewPassword" class="btn btn-primary">
                <i class="fa fa-floppy-o fa-pull-left" aria-hidden="true"></i> Passwort speichern
            </button>
        </div>
    </div>
</script>
