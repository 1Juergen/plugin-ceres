{% extends "PluginCallisto::PageDesign.PageDesign" %}
{% import "PluginCallisto::Checkout.Macros.Address" as address %}

{% set data = services.customer.getLatestOrder() %}

{% block PageBody %}
    {{ component( "PluginCallisto::Basket.Components.BasketTotals" ) }}

    <div class="page-content myaccount container-max m-b-3 m-t-1 p-b-3">
        <div class="row m-b-3">
            <div class="col-xs-12">
                <h1 class="h4">{{ trans("PluginCallisto::Callisto.generalThanks") }}</h1>
                <p>{{ trans("PluginCallisto::Callisto.orderWillBeProcessed") }}</p>
            </div>
        </div>

        <div class="row">
            <div class="col-md-5 m-b-2">
                <div class="card small">
                    <!-- ORDER -->
                    <div class="card-header">
                        <h5>{{ trans("PluginCallisto::Callisto.orderId") }} {{ data.order.id }}</h5>
                    </div>
                    <div class="card-block">
                        <div class="details">
                            <div class="row">
                                <strong class="col-xs-6 col-sm-5">{{ trans("PluginCallisto::Callisto.orderDate") }}</strong>
                                <span class="col-xs-6 col-sm-7">{{ data.order.createdAt | date(trans("PluginCallisto::Callisto.dateTimeFormat"))}}</span>
                            </div>

                            <div class="row">
                                <strong class="col-xs-6 col-sm-5">{{ trans("PluginCallisto::Callisto.orderStatus") }}</strong>
                                <span class="col-xs-6 col-sm-7">{{ data.status.frontendName }}</span>
                            </div>
                        </div>

                        <hr>

                        <div>
                            <div class="row">
                                <strong class="col-xs-6 col-sm-5">{{ trans("PluginCallisto::Callisto.orderInvoiceAddress") }}</strong>
                                <span class="col-xs-6 col-sm-7">{{ address.print( data.order.billingAddress ) }}</span>
                            </div>

                            <div class="row m-t-1">
                                <strong class="col-xs-6 col-sm-5">{{ trans("PluginCallisto::Callisto.orderShippingAddress") }}</strong>
                                <span class="col-xs-6 col-sm-7">
                                    {% if data.order.billingAddress.id == data.order.deliveryAddress.id %}
                                        <span>{{ trans("PluginCallisto::Callisto.addressSameAsInvoice") }}</span>
                                    {% else %}
                                        {{ address.print( data.order.billingAddress ) }}
                                    {% endif %}
                                </span>
                            </div>
                        </div>

                        <hr>

                        <div>
                            <div class="row">
                                <strong class="col-xs-6 col-sm-5">{{ trans("PluginCallisto::Callisto.orderPaymentMethod") }}</strong>
                                <span class="col-xs-6 col-sm-7">{{ data.paymentMethodName }}</span>
                            </div>
                            <div class="row">
                                <strong class="col-xs-6 col-sm-5">{{ trans("PluginCallisto::Callisto.orderPaymentStatus") }}</strong>
                                <span class="col-xs-6 col-sm-7">{{ trans("PluginCallisto::Callisto.paymentStatus_"~data.order.paymentStatus) }}</span>
                            </div>
                            <div class="row">
                                {{ LayoutContainer.show("PluginCallisto::OrderConfirmation.AdditionalPaymentInformation") }}
                            </div>
                        </div>

                        <hr>

                        <div>
                            <div class="row">
                                <strong class="col-xs-6 col-sm-5">{{ trans("PluginCallisto::Callisto.orderShippingProfile") }}</strong>
                                <span class="col-xs-6 col-sm-7">{{ data.shippingProvider }} - {{ data.shippingProfileName }}</span>
                            </div>

                            {% set shippingDate = "" %}
                            {% for date in data.order.dates %}
                                {% if date.typeId == 8 %}
                                    {% set shippingDate = date.date %}
                                {% endif %}
                            {% endfor %}

                            {% if shippingDate is not empty %}
                                <div class="row">
                                    <strong class="col-xs-6 col-sm-5">{{ trans("PluginCallisto::Callisto.orderEstimatedShippingDate") }}</strong>
                                    <span class="col-xs-6 col-sm-7">{{ shippingDate|date(trans("PluginCallisto::Callisto.dateFormat")) }}</span>
                                </div>
                            {% endif %}
                        </div>

                    </div>
                    <!-- ORDER -->
                </div>

            </div>

            <div class="col-md-7">
                <div class="confirmation-order-list">
                    {% set shippingCosts = 0 %}
                    {% set shippingCostsNet = 0 %}
                    {% set itemTotals = 0 %}
                    {% set itemTotalsNet = 0 %}

                    {% for item in data.order.orderItems %}
                        {% if item.itemVariationId != 0 %}
                            {% set itemImage = services.item.getVariationImage( item.itemVariationId ) %}
                            {% set itemURL = item.itemVariationId | buildVariationURL(true) %}
                            <article class="cmp cmp-order-item">
                                <a href="{{ itemURL }}" class="item-image">
                                    <img src="{{ itemImage }}">
                                </a>
                                <div class="item-details small">
                                    <a href="{{ itemURL }}" class="clearfix">
                                        <div class="item-name">
                                            {{ item.orderItemName }}
                                        </div>
                                    </a>

                                    {% set price = item.amounts[0].priceGross %}
                                    {% set priceTotal = item.quantity * price %}
                                    {% set currency = item.amounts[0].currency %}
                                    {% set itemTotals = itemTotals + price %}
                                    {% set itemTotalsNet = itemTotalsNet + item.amounts[0].priceNet %}
                                    <div class="row">
                                        <strong class="col-xs-6 col-sm-3">{{ trans("PluginCallisto::Callisto.orderPricePerPiece") }}</strong>
                                        <span class="col-xs-6 col-sm-9">{{ price | formatMonetary( currency ) }}</span>
                                    </div>
                                    <div class="row">
                                        <strong class="col-xs-6 col-sm-3">{{ trans("PluginCallisto::Callisto.orderPeace") }}</strong>
                                        <span class="col-xs-6 col-sm-9">{{ item.quantity }}</span>
                                    </div>
                                    <div class="row">
                                        <strong class="col-xs-6 col-sm-3">{{ trans("PluginCallisto::Callisto.orderTotal") }}</strong>
                                        <strong class="col-xs-6 col-sm-9">{{ priceTotal | formatMonetary( currency ) }}</strong>
                                    </div>
                                </div>
                            </article>
                        {% else %}
                            {% set shippingCosts = item.amounts[0].priceOriginalGross %}
                            {% set shippingCostsNet = item.amounts[0].priceOriginalNet %}
                        {% endif %}
                    {% endfor %}

                </div>
                <div class="gesamtsumme">
                    {% set basketConfig = config("PluginCallisto.basket.data") | split(", ") %}
                    {% set amount = data.order.amounts[0] %}
                    <!-- BASKET TOTALS -->
                    <div class="cmp cmp-totals">
                        <h3>{{ trans("PluginCallisto::Callisto.basketSum") }}</h3>
                        <div>
                            <dl>
                                {% if "basket.value_of_items_gross" in basketConfig or "all" in basketConfig %}
                                    <dt>
                                        <strong>{{ trans("PluginCallisto::Callisto.basketValue") }} ({{ trans("PluginCallisto::Callisto.basketGross") }})</strong>
                                    </dt><!--
                                 --><dd>
                                    <strong>{{ itemTotals | formatMonetary( amount.currency ) }}</strong>
                                </dd>
                                {% endif %}

                                {% if "basket.value_of_items_net" in basketConfig or "all" in basketConfig %}
                                    <dt>
                                        {{ trans("PluginCallisto::Callisto.basketValue") }} ({{ trans("PluginCallisto::Callisto.basketNet") }})
                                    </dt><!--
                                 --><dd>
                                    {{ itemTotalsNet | formatMonetary( amount.currency ) }}
                                </dd>
                                {% endif %}

                                {% if "basket.shipping_costs_gross" in basketConfig or "all" in basketConfig %}
                                    <dt>
                                        <strong>{{ trans("PluginCallisto::Callisto.itemShippingCosts") }} ({{ trans("PluginCallisto::Callisto.basketGross") }})</strong>
                                    </dt><!--
                                 --><dd>
                                    <strong>{{ shippingCosts | formatMonetary( amount.currency ) }}</strong>
                                </dd>
                                {% endif %}

                                {% if "basket.shipping_costs_net" in basketConfig or "all" in basketConfig %}
                                    <dt>
                                        {{ trans("PluginCallisto::Callisto.itemShippingCosts") }} ({{ trans("PluginCallisto::Callisto.basketNet") }})
                                    </dt><!--
                                 --><dd>
                                    {{ shippingCostsNet | formatMonetary( amount.currency ) }}
                                </dd>
                                {% endif %}

                                {% if "basket.vat" in basketConfig or "all" in basketConfig %}
                                    <dt>
                                        {{ trans("PluginCallisto::Callisto.basketVAT") }}
                                    </dt><!--
                                 --><dd>
                                    {{ amount.vatTotal | formatMonetary( amount.currency ) }}
                                </dd>
                                {% endif %}

                                <hr>

                                {% if "basket.order_total_gross" in basketConfig or "all" in basketConfig %}
                                    <dt>
                                        <strong>{{ trans("PluginCallisto::Callisto.basketTotalSum") }} ({{ trans("PluginCallisto::Callisto.basketGross") }})</strong>
                                    </dt><!--
                                 --><dd>
                                    <strong>{{ amount.grossTotal | formatMonetary( amount.currency ) }}</strong>
                                </dd>
                                {% endif %}

                                {% if "basket.order_total_net" in basketConfig or "all" in basketConfig %}
                                    <dt>
                                        {{ trans("PluginCallisto::Callisto.basketTotalSum") }} ({{ trans("PluginCallisto::Callisto.basketNet") }})
                                    </dt><!--
                                 --><dd>
                                    {{ amount.netTotal | formatMonetary( amount.currency ) }}
                                </dd>
                                {% endif %}
                            </dl>
                        </div>
                    </div>
                    <!-- ./BASKET TOTALS -->
                </div>
            </div>
        </div>
        <hr>
        <div class="row">
            {% set loggedIn = frontend.Account.getIsAccountLoggedIn %}
            <div class="col-xs-6 col-md-4 {% if loggedIn %}offset-md-2{% else %}offset-xs-3 offset-md-4{% endif %}">
                <a href="/" type="" class="btn btn-primary btn-block bg-primary">{{ trans("PluginCallisto::Callisto.generalHomepage") }}</a>
            </div>


            {% if loggedIn %}
                <div class="col-xs-6 col-md-4">
                    <a href="/my-account" type="" class="btn btn-primary btn-block bg-primary">{{ trans("PluginCallisto::Callisto.accMyAccount") }}</a>
                </div>
            {% endif %}
        </div>

    </div>

{% endblock %}
