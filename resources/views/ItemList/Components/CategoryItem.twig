<script type="x/template" id="vue-category-item">
    <li class="col-xs-12 col-sm-6 col-md-4 col-lg-3">

        <article class="cmp cmp-product-thumb cmp-product-thumb--grid">
            <div class="thumb-inner">
                <div class="thumb-background"></div>

                <div class="thumb-extras">
                    <div class="thumb-scroll-cmd scroll-up">
                        <i class="fa fa-chevron-up" aria-hidden="true"></i>
                    </div>
                    <ul>
                        <li class="img-contain-container square-container">
                            <img class="img-fluid" data-original="{{ plugin_path('PluginCeres') }}/images/100x100.png">
                        </li>
                        <li class="img-contain-container square-container">
                            <img class="img-fluid" data-original="{{ plugin_path('PluginCeres') }}/images/100x100.png">
                        </li>
                        <li class="img-contain-container square-container">
                            <img class="img-fluid" data-original="{{ plugin_path('PluginCeres') }}/images/100x100.png">
                        </li>
                        <li class="img-contain-container square-container">
                            <img class="img-fluid" data-original="{{ plugin_path('PluginCeres') }}/images/100x100.png">
                        </li>
                        <li class="img-contain-container square-container">
                            <img class="img-fluid" data-original="{{ plugin_path('PluginCeres') }}/images/100x100.png">
                        </li>
                    </ul>
                    <div class="thumb-scroll-cmd scroll-down">
                        <i class="fa fa-chevron-down" aria-hidden="true"></i>
                    </div>
                </div>

                <div class="thumb-controls">
                    <add-to-basket :item="itemData" :show-quantity="false"></add-to-basket>
                </div>


                <a href="${ itemPath }" class="thumb-image">
                    <div class="square-container">
                        <div class="square-inner main-image">
                            <img class="img-fluid lazy" v-el:lazy-img data-original="${ imageUrls[0] }"
                                 alt="${ texts | itemName }"/>
                        </div>
                    </div>
                </a>

                <!-- STORE SPECIALS -->
                <item-store-special v-if="storeSpecial > 0" :store-special="storeSpecial"
                                    :recommended-retail-price="recommendedRetailPrice"
                                    :variation-retail-price="variationRetailPrice"
                                    :decimal-count="decimalCount"></item-store-special>
                <!-- ./STORE SPECIALS -->

                <!-- ITEM DETAILS -->
                <div class="thumb-content">
                    <a href="${ itemPath }" class="thumb-title small">
                        ${ texts | itemName }
                    </a>
                    <div class="thumb-meta">
                        <div class="prices">
                            <del class="crossprice" v-if="recommendedRetailPrice > 0">
                                ${ recommendedRetailPrice | currency }
                            </del>

                            <div class="price">
                                ${ variationRetailPrice | currency }
                            </div>
                        </div>
                    </div>
                </div>
                <!-- ./ITEM DETAILS  -->
            </div>
        </article>
    </li>
</script>
