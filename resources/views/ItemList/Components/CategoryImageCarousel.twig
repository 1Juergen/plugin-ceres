<script type="x/template" id="vue-category-image-carousel">

    <div v-if="enableCarousel === 'true' && disableLazyLoad" class="owl-carousel owl-theme">
        <a v-for="imageUrl in imageUrls | orderBy 'position'" :href="itemUrl">
            <img v-if="disableLazyLoad" class="img-fluid" :src="imageUrl.url" :alt="altText">
        </a>
    </div>

    <div v-if="enableCarousel === 'true' && !disableLazyLoad" class="owl-carousel owl-theme">
        <a v-for="imageUrl in imageUrls | orderBy 'position'" :href="itemUrl">
            <item-lazy-img template="#vue-item-lazy-img" v-if="$index === 0" :image-url="imageUrl.url"
                           :alt="altText"></item-lazy-img>
            <img v-else class="img-fluid owl-lazy" :data-src="imageUrl.url" :alt="altText">
        </a>
    </div>

    <a v-if="enableCarousel === 'false'" :href="itemUrl">
        <item-lazy-img template="#vue-item-lazy-img" :image-url="imageUrls[0].url" :alt="altText"></item-lazy-img>
    </a>

</script>
