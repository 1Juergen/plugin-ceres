<div class="accountSettingsModal${_uid}">
	<div class="modal fade" data-backdrop="static">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close" @click="clearFields">
					<span aria-hidden="true">&times;</span>
				</button>
				<h6 class="modal-title">{{ trans("PluginCallisto::Callisto.accPasswordChange") }}</h6>
			</div>
			<div class="modal-body form-horizontal">
	      <div class="form-group">
	        <label for="new_password" class="control-label">{{ trans("PluginCallisto::Callisto.accNewPassword") }}</label>
	          <div class="controls">
	            <input type="password" name="new_password" v-model="newPassword" class="form-control">
	          </div>
	      </div>
	      <div class="form-group">
	        <label for="confirm_password" class="control-label">{{ trans("PluginCallisto::Callisto.accRepeatPassword") }}</label>
	          <div class="controls">
	            <input type="password" name="confirm_password" v-model="confirmPassword" class="form-control">
	          </div>
	      </div>
	      <div v-show="!matchPassword" style="color: red;">{{ trans("PluginCallisto::Callisto.accCorrectPassword") }}</div>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-dismiss="modal" @click="clearFields">
					<i class="fa fa-times" aria-hidden="true"></i> {{ trans("PluginCallisto::Callisto.generalCancel") }}
				</button>
				<button type="button" class="btn btn-primary" @click="saveAccountSettings">
					<i class="fa fa-check" aria-hidden="true"></i> {{ trans("PluginCallisto::Callisto.generalSave") }}
				</button>
			</div>
		</div>
	</div>
	</div>
</div>
