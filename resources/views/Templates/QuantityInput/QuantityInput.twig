<script type="x/template" id="vue-quantity-input">
    <div class="input-group vert">
        <span class="input-group-btn">
            <button class="btn btn-secondary" type="button" @click="value++" :class="{ 'disabled' : value >= max }">+</button>
        </span>

        <input type="text" class="form-control" size="3" maxlength="3" v-model="value">

        <span class="input-group-btn">
            <button class="btn btn-secondary" type="button" @click="value--" :class="{ 'disabled' : value <= min }">-</button>
        </span>
    </div>
</script>
